# ==================== SERVER ====================
PORT=8080
GIN_MODE=debug

# ==================== DATABASE ====================
# For Docker: use postgres:5432
# For local: use localhost:5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=youtube_analyzer
DATABASE_URL=postgres://postgres:postgres@postgres:5432/youtube_analyzer?sslmode=disable

# ==================== REDIS ====================
REDIS_URL=redis://redis:6379

# ==================== KAFKA ====================
KAFKA_BROKERS=kafka:9093
KAFKA_ENABLED=true
KAFKA_CONSUMER_GROUP=youtube-analyzer-dev

# ==================== YOUTUBE ====================
YOUTUBE_API_KEY=

# ==================== LLM PROVIDER ====================
# Options: gemini, ollama
DEFAULT_LLM_PROVIDER=gemini
GEMINI_API_KEY=
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# ==================== WHISPER PROVIDER ====================
# Options: groq, local
DEFAULT_WHISPER_PROVIDER=groq
GROQ_API_KEY=
LOCAL_WHISPER_URL=http://whisper:8001
WHISPER_MODEL=base

# ==================== FRONTEND ====================
VITE_API_URL=http://localhost:8080/api/v1
