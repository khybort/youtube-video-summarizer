# ==================== YouTube Video Summarizer - Environment Variables ====================
# Copy this file to .env and fill in your actual values

# ==================== Server Configuration ====================
PORT=8080
GIN_MODE=debug

# ==================== Database Configuration ====================
DATABASE_URL=postgres://postgres:postgres@localhost:5432/youtube_analyzer?sslmode=disable

# ==================== Redis Configuration ====================
REDIS_URL=redis://localhost:6379

# ==================== YouTube API ====================
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# ==================== AI/LLM Configuration ====================
# Default LLM Provider: gemini or ollama
DEFAULT_LLM_PROVIDER=gemini

# Google Gemini API
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (for local LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ==================== Whisper/STT Configuration ====================
# Default Whisper Provider: groq or local
DEFAULT_WHISPER_PROVIDER=groq

# Groq API (for cloud Whisper)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Local Whisper Service Configuration
LOCAL_WHISPER_URL=http://localhost:8001
WHISPER_MODEL=base

# ==================== Frontend Configuration ====================
VITE_API_URL=http://localhost:8080

# ==================== Docker Compose Overrides ====================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=youtube_analyzer
