# ==================== SERVER ====================
PORT=8080
GIN_MODE=release

# ==================== DATABASE ====================
# Production database URL should be set via environment variable
# DATABASE_URL=postgres://user:password@db-host:5432/youtube_analyzer?sslmode=require

# ==================== REDIS ====================
# Production Redis URL should be set via environment variable
# REDIS_URL=redis://redis-host:6379

# ==================== KAFKA ====================
# Production Kafka brokers should be set via environment variable
# KAFKA_BROKERS=kafka1:9092,kafka2:9092,kafka3:9092
KAFKA_ENABLED=true
KAFKA_CONSUMER_GROUP=youtube-analyzer-prod

# ==================== YOUTUBE ====================
# YOUTUBE_API_KEY should be set via environment variable or secret manager

# ==================== LLM PROVIDER ====================
# Options: gemini, ollama
DEFAULT_LLM_PROVIDER=gemini
# GEMINI_API_KEY should be set via environment variable or secret manager
# OLLAMA_URL=http://ollama-host:11434
# OLLAMA_MODEL=llama3.2

# ==================== WHISPER PROVIDER ====================
# Options: groq, local
DEFAULT_WHISPER_PROVIDER=groq
# GROQ_API_KEY should be set via environment variable or secret manager
# LOCAL_WHISPER_URL=http://whisper-host:8001
# WHISPER_MODEL=base

# ==================== FRONTEND ====================
# VITE_API_URL should be set during build time
# VITE_API_URL=https://api.yourdomain.com/api/v1
